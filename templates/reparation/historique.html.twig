{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

    <div class="my-5">

    {% if reparations is not empty %}
        {% for value in reparations %}
            <div class="d-flex justify-content-center mb-4">
                <div class="card w-50">
                    <div class="card-body d-flex">
                        <div>
                            <img src="https://cdn.pixabay.com/photo/2020/07/08/14/29/mechanic-5384089_960_720.png"
                                 width="250" alt="">
                        </div>
                        <div>

                            <h5 class="card-title">
                                {{ value.client.idUser.nom|title }}
                                {{ value.client.idUser.prenom|title }}
                            </h5>
                            <p class="card-text">{{ value.description }}</p>
                            <p class="card-text">{{ value.dateReparation|date('d-m-Y') }}</p>
                            <p class="card-title text-success">{{ value.prix }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    {% else %}
        <h2 class="text-center">Aucun rendez-vous</h2>
    {% endif %}


{% endblock %}